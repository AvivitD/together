<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_meduim_margin"
        android:background="@drawable/background_style_11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/sta_post_rep_title"
            android:layout_marginLeft="@dimen/small_meduim_margin"
            android:layout_marginTop="@dimen/small_meduim_margin"
            android:layout_marginRight="@dimen/small_meduim_margin"
            android:layout_marginBottom="@dimen/small_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/sta_post_rep_msg"
            android:layout_marginLeft="@dimen/small_meduim_margin"
            android:layout_marginRight="@dimen/small_meduim_margin"
            android:layout_marginBottom="@dimen/small_meduim_margin"
            android:layout_marginTop="@dimen/small_margin" />
    </LinearLayout>

</LinearLayout>