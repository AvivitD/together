<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Quotes"
    xmlns:fab="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/faces_top_txt"
                android:id="@+id/faces_top_txt" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/qoute_layout_face1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView10"
                        android:src="@drawable/face1"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/happy_text"
                        android:id="@+id/qoute_textview_face1"
                        android:layout_weight="3"
                        android:layout_marginTop="-20dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/qoute_layout_face2">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView11"
                        android:src="@drawable/face2"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/nervous_text"
                        android:id="@+id/qoute_textview_face2"
                        android:layout_marginTop="-20dp"
                        android:layout_weight="3" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/qoute_layout_face3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView12"
                        android:src="@drawable/face3"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/bord_text"
                        android:id="@+id/qoute_textview_face3"
                        android:layout_marginTop="-20dp"
                        android:layout_weight="3"
                        android:layout_marginLeft="-400dp"
                        android:layout_marginRight="-400dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/qoute_layout_face4"
                    android:background="#00ffffff">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView13"
                        android:src="@drawable/face4"
                        android:layout_weight="1"
                        android:background="#00ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/mad_text"
                        android:id="@+id/qoute_textview_face4"
                        android:layout_marginTop="-20dp"
                        android:layout_weight="3"
                        android:background="#00ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/qoute_layout_face5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView14"
                        android:src="@drawable/face5"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/sad_text"
                        android:id="@+id/qoute_textview_face5"
                        android:layout_marginTop="-20dp"
                        android:layout_weight="3" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/quotes_scroll_view"
                android:layout_weight="2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/quotes_container"
                    android:padding="@dimen/small_meduim_margin"></LinearLayout>
            </ScrollView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/quote_add_quote_btn"
                android:layout_gravity="bottom"
                android:background="@drawable/button_style_1"
                android:text="@string/add_quote"
                android:layout_weight="15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/very_large_margin"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_style_5"
        android:padding="@dimen/small_meduim_margin"
        android:id="@+id/quote_create_container"
        android:measureWithLargestChild="false"
        android:visibility="invisible">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/author_text"
            android:id="@+id/quote_create_quote_author_textbox"
            android:layout_gravity="center_horizontal"
            android:layout_weight="14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/content_text"
            android:id="@+id/quote_create_quote_content_textbox"
            android:layout_gravity="center_horizontal"
            android:layout_weight="9"
            android:layout_marginTop="@dimen/small_meduim_margin" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="17">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:id="@+id/quote_submit_new_quote"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/button_style_4"
                android:padding="@dimen/small_margin" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:id="@+id/emergency_layout"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/emergency_btn_txt"
            android:id="@+id/emergency_btn_txt"
            android:layout_gravity="bottom" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/quotes_help_sign"
            fab:fab_icon="@drawable/help_sign"
            fab:fab_colorNormal="@color/emphasis"
            fab:fab_colorPressed="@color/half_yellow"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/very_big_margin"
        android:layout_marginLeft="@dimen/very_large_margin"
        android:layout_marginTop="@dimen/very_big_margin"
        android:layout_marginRight="@dimen/very_large_margin"
        android:id="@+id/quote_help_container"
        android:background="@drawable/background_style_5"
        android:visibility="invisible">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/quote_help_textbox"
            android:layout_weight="6"
            android:layout_marginLeft="@dimen/small_meduim_margin"
            android:layout_marginTop="@dimen/small_meduim_margin"
            android:layout_marginRight="@dimen/small_meduim_margin" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:id="@+id/quote_help_submit"
            android:layout_weight="1"
            android:background="@drawable/button_style_1"
            android:layout_margin="@dimen/small_meduim_margin" />
    </LinearLayout>

</FrameLayout>
