<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.weallone.raz.together.Activities.LoginActivity"
    android:background="@drawable/background_style_4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginBottom="@dimen/small_meduim_margin"
        android:weightSum="1"
        android:id="@+id/login_register_panel">

        <ImageView
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/togther_title"
            android:layout_weight="0.20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/meduim_title"
            android:text="@string/welcome"
            android:id="@+id/textView7"
            android:layout_margin="@dimen/meduim_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/login_explain_text"
            android:id="@+id/textView6"
            android:layout_gravity="center"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/login_first_name"
                android:id="@+id/login_first_name"
                android:layout_weight="8"
                android:layout_margin="@dimen/small_margin" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/login_last_name"
                android:id="@+id/login_last_name"
                android:layout_weight="8"
                android:layout_margin="@dimen/small_margin" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/meduim_margin">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_1"
                android:id="@+id/login_input_email"
                android:layout_weight="8" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/meduim_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/or_and_text"
                android:id="@+id/or_text"
                android:layout_marginLeft="@dimen/small_meduim_margin"
                android:layout_marginRight="@dimen/small_meduim_margin" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_2"
                android:id="@+id/login_input_phone"
                android:layout_weight="8" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/regist"
            android:id="@+id/login_send"
            android:layout_margin="@dimen/small_meduim_margin"
            android:background="@drawable/button_style_5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="גרסה 3.0 "
            android:id="@+id/textView3"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/login_text"
        android:layout_margin="@dimen/small_meduim_margin"
        android:textColor="@color/blue_grey"
        android:textStyle="bold"
        android:id="@+id/login_button" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_panel"
        android:layout_marginTop="@dimen/very_big_margin"
        android:layout_marginBottom="@dimen/very_big_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginLeft="@dimen/large_margin"
        android:background="@drawable/background_style_12"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/meduim_title"
            android:text="@string/login_title"
            android:id="@+id/textView10"
            android:layout_marginLeft="@dimen/meduim_margin"
            android:layout_marginTop="@dimen/meduim_margin"
            android:layout_marginRight="@dimen/meduim_margin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_email"
            android:hint="@string/email_text"
            android:layout_margin="@dimen/small_meduim_margin" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/password"
            android:id="@+id/login_password"
            android:layout_marginLeft="@dimen/small_meduim_margin"
            android:layout_marginRight="@dimen/small_meduim_margin"
            android:layout_marginBottom="@dimen/small_meduim_margin"
            android:gravity="right"
            android:visibility="visible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_text"
            android:id="@+id/login_submit_btn"
            android:background="@drawable/button_style_5"
            android:layout_margin="@dimen/small_meduim_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/forgot_password"
            android:id="@+id/login_forgot_password_text"
            android:layout_margin="@dimen/small_margin" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#c069c1db"
        android:clickable="true"
        android:id="@+id/login_prompt_message_container"
        android:visibility="gone"
        android:transitionGroup="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/background_style_13"
            android:padding="10dp"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/login_prompt_message_text"
                android:id="@+id/login_prompt_message"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:accessibilityLiveRegion="none"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/login_prompt_message_link"
                android:textColor="#2441ff"
                android:id="@+id/login_prompt_message_link" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
