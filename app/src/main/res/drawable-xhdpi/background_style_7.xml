<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <gradient
        android:angle="90"
        android:startColor="#e8ffffff"
        android:centerColor="#d1ffffff"
        android:endColor="#ceffffff"
        android:type="linear" />

    <corners
        android:radius="5dp"/>
    <padding
        android:bottom="@dimen/small_padding"
        android:left="@dimen/small_padding"
        android:right="@dimen/small_padding"
        android:top="@dimen/small_padding"
        />
